<div id="contact-section" class="row">
  <div class="col-sm-12">
    <h1 class="text-center">Contact</h1>
    <form>
      <div class="control-group form-group">
        <div class="controls">
          <label>Name:</label>
          <input
            type="text"
            class="form-control"
            id="name"
            required
            ng-model="inquiry.name"
          />
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Phone Number:</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            required
            ng-model="inquiry.phone"
          />
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Email Address:</label>
          <input
            type="text"
            class="form-control"
            id="email"
            required
            ng-model="inquiry.email"
          />
        </div>
      </div>
      <div class="control-group form-group">
        <div class="controls">
          <label>Message:</label>
          <textarea
            rows="10"
            cols="100"
            class="form-control"
            id="message"
            required
            ng-model="inquiry.comments"></textarea>
        </div>
      </div>
      <!-- <div ng-if="thanks" class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button
        >
        <strong>Thank you for the inquiry!</strong>
        If this is a question, I will reply as soon as I am able!
      </div> -->
      <!-- For success/fail messages -->
      <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
  </div>
</div>
